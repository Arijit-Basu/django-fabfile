server {
    listen       80 default;
    server_name foobar.com;
    rewrite ^(.*)$ http://{{ hostname }}$1 permanent;
}

server {
    listen       80;
    server_name  {{ hostname }};
    root /project/foobar/current/static;

	access_log  /var/log/nginx/foobar.access.log;
	error_log  /var/log/nginx/foobar.error.log;

    proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Host $http_host;
    proxy_set_header  X-Real-IP  $remote_addr;
    proxy_set_header Host $http_host;

    location /static {
        root /project/foobar/current;
    }

    location /media {
        root /envs/default/lib/python2.6/site-packages/django/contrib/admin/;
    }

    location / {
        proxy_pass http://{{ django_host }}:{{ DJANGO_PORT }};
    }
}
